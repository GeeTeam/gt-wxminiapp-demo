
page {
background: rgba(237, 237, 237, 0.9);
backdrop-filter: blur(27.1828px);
overflow: hidden;
}

.container {
    width: 100%;
    height: 100%;
    margin-top: 3%;
    background-color: #FFFFFF;
}

.swp {
    position: absolute;
    top: 12%;
}

.container .main {
width: 77.6%;
height: 72%;
padding: 28% 11.2% 5%;
}

.main .user, .main .pass {
    height: 44px;
    display: flex;
}

.main .user view:nth-child(1), .main .pass view:nth-child(1) {
    display: inline-block;
    width: 13.79%;
    height: 100%;
    background: #F6F9FC;
    border: 1px solid #DCE1E6;
box-sizing: border-box;
border-radius: 3px 0px 0px 3px;
display: flex;
justify-content: center;
align-content: center;
align-items: center;

}

.main .user view:nth-child(2), .main .pass view:nth-child(2) {
   padding-left: 5%;
   background: #FFFFFF;
   border-top: 1px solid #DCE1E6;
   border-right: 1px solid #DCE1E6;
   border-bottom: 1px solid #DCE1E6;
   box-sizing: border-box;
   border-top-right-radius: 3px;
   border-bottom-right-radius:3px ;
   height: 100%;
   width: 100%;
   color: #00205940;
   font-size: 14px;
}

.main .user image,.main .pass image{
    width: 51.6%;
    height: 40.9%;
}




.weui-input {
    height: 100%;
}

.place_user, .place_pass {
    color: #00205940;
    font-size: 14px;
}

.submit {
    width: 100%;
    height: 44px;
    background: #D5DBEB;
border-radius: 3px;
color: #FFFFFF;
text-align: center;
    line-height: 44px;
    font-size: 13px;
}

.main>view {
    margin-bottom: 6.18%;
}

.main .tips {
    margin: 16% 0 14%;

}
.tips .line{
    width: 110%;
    opacity: 0.2;
border: 1px solid #000000;
transform: translateX(-5%);
margin-bottom: 10%;
}

.tips image {
    width: 130px;
    height: 20px;
    margin-bottom: 12px;
}

.tips>view {
    font-size: 14px;   
    color: #3B426B;
    line-height: 20px; 
}

.footer {
    display: flex;
    justify-content: space-between;
}
.footer .more {
    color: #376FFF;
    font-size: 14px;
}

.footer image{
    width: 73.5px;
    height: 20px;
}

.demo1 {
    width: 100%;
    height: 100%;
    background: #D5DBEB;
    border-radius: 3px;
}


#captchabox {
    width: 100%;
    height: 44px;
}