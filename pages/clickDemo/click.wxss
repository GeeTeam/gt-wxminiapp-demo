page {
  width: 100%;
  height: 100%;
}
.header{
  text-align: center;
  font-size: "PingFangSC-Regular", "Open Sans", Arial, "Hiragino Sans GB", "Microsoft YaHei", "STHeiti", "WenQuanYi Micro Hei", SimSun, sans-serif;
  margin: 20px 0px;
}

.app-container {
  width: 80%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border: 1px solid #ccc;
  padding: 20px;
  border-radius: 5px;
}

.input {
  display: inline-block;
  width: 250px;
  margin-left:20px; 
  margin-bottom: 20px;
}
.input label {
  font-size: 14px;
}

.input input {
    border: 1px solid #cccccc;
    border-radius: 2px;
    padding: 0 10px;
    width: 240px;
    height: 40px;
    font-size: 14px;
}


.btn {
  width: 260px;
  margin: 20px ;
}